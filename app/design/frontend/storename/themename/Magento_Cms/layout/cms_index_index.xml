<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="slider.container" htmlTag="div" htmlClass="slider-home-container">
                <block class="Magento\Cms\Block\Block" name="slider.items">
                    <arguments>
                        <argument name="block_id" xsi:type="string">myslider</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>


        <referenceBlock name="page.main.title" remove="true" />

    </body>
</page>